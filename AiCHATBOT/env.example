# AI Provider Configuration
# Options: 'openai' (paid) or 'ollama' (free, runs locally)
AI_PROVIDER=ollama

# AI Model Configuration
# For OpenAI: 'gpt-4o-mini', 'gpt-4', 'gpt-3.5-turbo'
# For Ollama: 'llama3.2', 'llama3.1', 'llama3', 'llama2', 'mistral'
AI_MODEL=llama3.2

# OpenAI API Configuration (only needed if AI_PROVIDER=openai)
OPENAI_API_KEY=sk-your-actual-api-key-here

# Flask Configuration
FLASK_SECRET_KEY=change-me-to-a-long-random-string
DEBUG=True

# Application Settings
APP_PORT=5000
APP_HOST=127.0.0.1

# Optional: Fine-tune AI behavior
# AI_TEMPERATURE=0.3
# MAX_TOKENS=350

